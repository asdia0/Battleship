<Window x:Class="Battleship.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Battleship.GUI"
        mc:Ignorable="d"
        Title="Battleship" Height="450" Width="800">
    <Grid>
        <Menu IsMainMenu="True">
            <MenuItem Header="File">
                <MenuItem Header="New game">
                </MenuItem>
                <MenuItem Header="Load game">
                </MenuItem>
                <MenuItem Header="Save game">
                </MenuItem>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="Ship editor" Click="Click_ShipEditor">
                </MenuItem>
                <MenuItem Header="Grid editor">
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Mode">
                <MenuItem Header="Play against computer">
                </MenuItem>
                <MenuItem Header="Find best move">
                </MenuItem>
                <MenuItem Header="Simulate">
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About">
                </MenuItem>
                <MenuItem Header="Controls">
                </MenuItem>
            </MenuItem>
        </Menu>

    </Grid>
</Window>
