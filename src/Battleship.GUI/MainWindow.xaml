<Window x:Class="Battleship.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Battleship.GUI"
        mc:Ignorable="d"
        Icon="icon.ico"
        Title="Battleship" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Menu Name="Menu_" IsMainMenu="True" Grid.ColumnSpan="3">
            <MenuItem Header="File">
                <MenuItem Header="New game" Click="Click_New"/>
                <MenuItem Header="Load game" Click="Click_Load"/>
                <MenuItem Name="SaveGame" Header="Save game" Click="Click_Save"/>

            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="Ship editor" Click="Click_ShipEditor"/>
                <MenuItem Header="Square editor" Click="Click_SquareEditor"/>
                <MenuItem Header="Grid editor" Click="Click_GridEditor"/>
            </MenuItem>
            <MenuItem Header="Mode">
                <MenuItem Header="Play against computer" Click="Click_Play"/>
                <MenuItem Header="Find best move" Click="Click_Find"/>
                <MenuItem Header="Simulate" Click="Click_Simulate"/>
            </MenuItem>
        </Menu>

        <Image Name="Image1" Height="Auto" Width="{Binding Path=Height, RelativeSource={RelativeSource Self}}" Grid.Column="0" VerticalAlignment="Center" Margin="30,0,0,0"/>
        <Image Name="Image2" Height="Auto" Width="{Binding Path=Height, RelativeSource={RelativeSource Self}}" Grid.Column="2" VerticalAlignment="Center" Margin="0,0,0,30"/>
    </Grid>
</Window>
